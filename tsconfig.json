{
  "compilerOptions": {
    "target": "ES2017", // Target modern JavaScript features
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Include DOM and ESNext features
    "allowJs": true, // Allow JavaScript files in the project
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "noEmit": true, // Prevent emitting files from TypeScript
    "esModuleInterop": true, // Enable interoperability with CommonJS modules
    "module": "ESNext", // Use ESNext modules
    "moduleResolution": "Bundler", // Use module resolution optimized for modern bundlers
    "resolveJsonModule": true, // Allow importing JSON files
    "isolatedModules": true, // Ensure each file can be transpiled in isolation
    "jsx": "preserve", // Keep JSX as-is for further processing by Next.js
    "incremental": true, // Enable incremental compilation
    "baseUrl": ".", // Set the base URL for imports
    "paths": {
      "@/*": ["./*"] // Define path alias for simplified imports
    },
    "plugins": [
      {
        "name": "next" // Use Next.js-specific TypeScript plugin
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"], // Include required TypeScript files
  "exclude": ["node_modules"] // Exclude node_modules directory
}
